        </methods>
      </class>

      <class name="main.java.testcases.TeamPageTest">

        <methods>
          <include name="validateTeamPageLoadSuccessfully"/>
          <include name="validateInviteTeamButtonFunctionality"/>
          <include name="validateUserCantSubmitEmptyInvitation"/>
          <include name="validateInvitationSendFunctionality"/>

        </methods>
      </class>
      <class name="main.java.testcases.TechnicalTeamPageTest">
        <methods>
          <include name="validateTeamPageLoadSuccessfully"/>
            <include name="validateInviteTeamButtonFunctionality"/>
            <include name="validateUserCantSubmitEmptyInvitation"/>
            <include name="validateInvitationSendFunctionality"/>
        </methods>
